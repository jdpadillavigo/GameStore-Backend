generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Noticia {
  id Int @id
  title String
  category String
  author String
  redaction String
  image String
  days Int
}

model Usuario {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  name String
  country String
  token Int
  role String
  ventas Venta[]
  calificaciones Calificacion[]
}

model Venta {
  id Int @id @default(autoincrement())
  base_price Int
  discount Int
  juegoId String @unique
  juego Juego @relation(fields: [juegoId], references: [id])
  userId Int
  Usuario Usuario @relation(fields: [userId], references: [id])
}

model Calificacion {
  id Int @id @default(autoincrement())
  author String
  message String
  stars Int
  juegoId String
  juego Juego @relation(fields: [juegoId], references: [id])
  userId Int
  Usuario Usuario @relation(fields: [userId], references: [id])
}

model Juego {
  id String @id
  title String
  description String
  trailer String
  images String[]
  date_release String
  calificaciones Calificacion[]
  plataformas PlataformaJuego[]
  categorias CategoriaJuego[]
  venta Venta[]
}

model PlataformaJuego {
  juegoId String
  plataformaId Int
  juego Juego @relation(fields: [juegoId], references: [id])
  plataforma Plataforma @relation(fields: [plataformaId], references: [id])
  @@id([juegoId, plataformaId])
}

model Plataforma {
  id Int @id @default(autoincrement())
  name String @unique
  juegos PlataformaJuego[]
}

model CategoriaJuego {
  juegoId String
  categoriaId Int
  juego Juego @relation(fields: [juegoId], references: [id])
  categoria Categoria @relation(fields: [categoriaId], references: [id])
  @@id([juegoId, categoriaId])
}

model Categoria {
  id Int @id @default(autoincrement())
  name String @unique
  juegos CategoriaJuego[]
}
